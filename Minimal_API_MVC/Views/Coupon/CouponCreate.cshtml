@model CouponDTO

<h1>Create New Coupon</h1>
<hr />


<div class="row">

    <div class="col-md-4">
        <form asp-action="CouponCreate">

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="from-group">
                <label asp-for="Precent" class="control-label"></label>
                <input asp-for="Precent" class="form-control" />
                <span asp-validation-for="Precent" class="text-danger"></span>
            </div>
            <div class="from-group">
                <label asp-for="Created" class="control-label"></label>
                <input asp-for="Created" class="form-control" />
            </div>

            <div class="from-group form-check">
                <label class=" form-check-label">
                    <input class="form-check-input" asp-for="IsActive" />@Html.DisplayFor(model => model.IsActive)
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="CouponIndex">Back To List</a>
</div>